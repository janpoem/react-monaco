{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto",
    "ignore": [
      "src/plugins/biome/**/*",
      "src/plugins/biome/js-api/index.ts"
    ]
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "dist",
      "__files/*.ts",
      "src/plugins/biome/**/*"
    ],
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single"
    }
  },
  "files": {
    "ignore": ["dist", "__files/*.ts", "src/plugins/biome/**/*"]
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
